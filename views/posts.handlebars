{{#each posts as |post| }}

<div class="main container row">
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
   
      <a href="/project/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money"></span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{post}}</span>
      needed!
    </p>
    <p>Created by {{post.user.name}} on {{ post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
</div>
{{/each}}