<section class="section">
  <h1>Dashboard</h1>
  <h5>Congratulations!! You are successfully logged in.</h5>
  <div class="row">
    <div class="col-auto">
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

  <div class="user-dashboard">
    <div class="is-hidden-mobile">
      <div>
        <div class="columns is-mobile">
          <div class="column is-1"></div>
          <div class="column">
            <p class="subtitle">ISO Band/User</p>
            <div class="image is-1by1 sui-avatar"><img
                src="https://jesuswired.com/wp-content/uploads/2020/11/127012343_10157925614430669_6957727070722632912_o.jpg"
                class="is-rounded"></div>
          </div>
          <div class="column is-1"></div>
          <div class="column is-two-thirds content">
            <span>
              <h5>Location</h5>
              <input class="input is-normal" type="text" placeholder="Location">
            </span>

            <span>
              <h5>Genre: </h5>
              <input class="input is-normal" type="text" placeholder="Location">
            </span>

            <span>
              <h5>Desired Position:</h5>
              <input class="input is-normal" type="text" placeholder="Location">
            </span>

            <span>
              <h5>Experience:</h5>
              <input class="input is-normal" type="text" placeholder="Location">
            </span>

            <span>
              <h5>Availability:</h5>
              <input class="input is-normal" type="text" placeholder="Location">
            </span>

            <span>
              <h5>Schedule:</h5>
              <input class="input is-normal" type="text" placeholder="Location">
            </span>

            <div class="dropdown">
              <div class="dropdown-trigger">
                <button class="button" aria-haspopup="true" aria-controls="dropdown-menu3">
                  <span>Drop Down</span>
                  <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                </button>
              </div>
              <div class="dropdown-menu" id="dropdown-menu3" role="menu">
                <div class="dropdown-content">
                  <a href="#" class="dropdown-item">
                    Drop 1
                  </a>
                  <a href="#" class="dropdown-item">
                    Drop 2
                  </a>
                  <a href="#" class="dropdown-item">
                   Drop 3
                  </a>
                  <a href="#" class="dropdown-item">
                    Drop 4
                  </a>
                  <a href="#" class="dropdown-item">
                    Drop 5
                  </a>
                  <a href="#" class="dropdown-item">
                    Drop 6
                  </a>
                  <a href="#" class="dropdown-item">
                   Drop 7
                  </a>
                  <hr class="dropdown-divider">
                  <a href="#" class="dropdown-item">
                    More
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="is-hidden-tablet">
      <div>
        <div class="columns is-mobile">
          <div class="column">
            <div class="image is-1by1 sui-avatar"><img
                src="https://jesuswired.com/wp-content/uploads/2020/11/127012343_10157925614430669_6957727070722632912_o.jpg">
            </div>
          </div>
        </div>
        <div class="column is-1"></div>
        <div class="column is-two-thirds content">
          <h5>Location: </h5>
          <h5>Genre: </h5>
          <h5>Desired Position: </h5>
          <h5>Experience: </h5>
          <h5>Availability: </h5>
          <h5>Schedule: </h5>
          <h5>ISO Band/User: </h5>
        </div>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">Post:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-12 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-10">
        <h4><a href="/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.posting}}">DELETE</button>
      </div>
    </div>
  </div>
  <div class="tags">
    <h5>Keywords/Tags/Categories</h5>
  </div>
  </div>
</section>


<script src="./js/writePost.js"></script>